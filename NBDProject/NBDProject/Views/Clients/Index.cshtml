@model IEnumerable<NBDProject.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Sales"))
{
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success" })
</p>
}
<table class="table table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.cliName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City.cityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliProvince)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliConFname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliConLName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cliConPostion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.cliName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City.cityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliProvince)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliConFname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliConLName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cliConPostion)
        </td>
        @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Sales"))
    {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-info" }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
        </td>
}
    </tr>
}

</table>
