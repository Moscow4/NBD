<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Natural By Design", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Sales"))
                    {
                    <li>@Html.ActionLink("Client", "Index", "Clients")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Sales"))
                    {
                        <li>@Html.ActionLink("City", "Index", "Cities")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Production Manager") || User.IsInRole("Production Worker") || User.IsInRole("Chief Designer"))
                    {

                    <li>@Html.ActionLink("Tools", "Index", "Tools")</li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Production Manager") || User.IsInRole("Group Manager") || User.IsInRole("Production Worker"))
                    {
                        <li>@Html.ActionLink("Inventory", "Index", "Inventories")</li>
                    }
                    @*<li>@Html.ActionLink("Projects", "Index", "Projects")</li>*@
                    @if(User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Designer") || User.IsInRole("Chief Designer") || User.IsInRole("Production Manager") || User.IsInRole("Group Manager"))
                    { 
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Project<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                             @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Designer") || User.IsInRole("Chief Designer") || User.IsInRole("Production Manager") || User.IsInRole("Group Manager"))
                             {
                                <li>@Html.ActionLink("Project", "Index", "Projects")</li>
                             }
                            @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Designer") || User.IsInRole("Chief Designer") || User.IsInRole("Production Manager") || User.IsInRole("Production Worker") || User.IsInRole("Group Manager"))
                            {
                                
                                <li>@Html.ActionLink("Material Requirements", "Index", "MaterialRequirements")</li>
                                if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Production Manager") || User.IsInRole("Production Worker") || User.IsInRole("Group Manager") || User.IsInRole("Chief Designer"))
                                {

                                    <li>@Html.ActionLink("Project Tools", "Index", "ProjectTools")</li>
                                }
                            }
                            
                            @if (User.IsInRole("Designer") || User.IsInRole("Group Manager"))
                            {
                                <li>@Html.ActionLink("Labour Requirements", "Index", "LabourRequirementDesigns")</li>
                            }
                            @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant") || User.IsInRole("Production Manager") || User.IsInRole("Chief Designer"))
                            {
                                <li>@Html.ActionLink("Labour Requirements", "Index", "LabourRequirements")</li>
                                <li>@Html.ActionLink("Project Teams", "Index", "ProjectTeams")</li>
                                <li>@Html.ActionLink("Tasks", "Index", "TaskTests")</li>
                            }
                           
                            

                            <li class="divider"></li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Admin Assistant"))
                            {
                                <li>@Html.ActionLink("Workers", "Index", "Workers")</li>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Positions", "Index", "WorkTypes")</li>
                            }

                        </ul>
                    </li>

                    }

                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
